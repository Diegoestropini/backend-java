{
  "info": {
    "_postman_id": "c3d229f8-2c12-4b5c-a72e-2c6d2cf4b8df",
    "name": "FinancialClose Simulator",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Upload CSV",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "data/sample-transactions-10000.csv"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "upload"]
        }
      }
    },
    {
      "name": "List Transactions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/transactions?date=2026-01-10&status=CONCILIADA&page=0&size=50",
          "host": ["{{baseUrl}}"],
          "path": ["api", "transactions"],
          "query": [
            {"key": "date", "value": "2026-01-10"},
            {"key": "status", "value": "CONCILIADA"},
            {"key": "page", "value": "0"},
            {"key": "size", "value": "50"}
          ]
        }
      }
    },
    {
      "name": "Process Close",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/process-close?date=2026-01-10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "process-close"],
          "query": [
            {"key": "date", "value": "2026-01-10"}
          ]
        }
      }
    },
    {
      "name": "Close Summary",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/close-summary?date=2026-01-10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "close-summary"],
          "query": [
            {"key": "date", "value": "2026-01-10"}
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
}
